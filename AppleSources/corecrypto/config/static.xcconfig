CLANG_WARN_IMPLICIT_SIGN_CONVERSION = YES_ERROR

CLANG_ENABLE_OBJC_WEAK = YES

DEBUG_INFORMATION_FORMAT = dwarf-with-dsym

BUILD_VARIANTS = normal trace noasm
BUILD_VARIANTS[sdk=driverkit*] = normal

// SDK_INSTALL_ROOT is related to DriverKit
INSTALL_PATH = $(SDK_INSTALL_ROOT)/usr/local/lib

SKIP_INSTALL[sdk=driverkit*] = YES

STRIP_STYLE = debugging

HEADER_SEARCH_PATHS = $(inherited) $(SRCROOT)/acceleratecrypto/Header

OTHER_CFLAGS = -fno-stack-check -DBUILDKERNEL=0 -Wno-error=#warnings -Wundef -Wundef-prefix=TARGET_ $(inherited)
OTHER_CFLAGS[sdk=macosx*] = -Wno-error=#warnings $(inherited)

OTHER_CFLAGS_noasm = -DCC_USE_ASM=0
OTHER_CFLAGS_trace = -DCORECRYPTO_POST_TRACE
