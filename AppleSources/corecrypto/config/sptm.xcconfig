CORECRYPTO_SPTM_BASE_DIR = /usr/local/standalone/SPTM

PUBLIC_HEADERS_FOLDER_PATH = $(CORECRYPTO_SPTM_BASE_DIR)/include/corecrypto
PRIVATE_HEADERS_FOLDER_PATH = $(PUBLIC_HEADERS_FOLDER_PATH)
INSTALL_PATH = $(CORECRYPTO_SPTM_BASE_DIR)/lib

SYSTEM_HEADER_SEARCH_PATHS = $(SDKROOT)/$(CORECRYPTO_SPTM_BASE_DIR)/include
SYSTEM_FRAMEWORK_SEARCH_PATHS =
HEADER_SEARCH_PATHS =
FRAMEWORK_SEARCH_PATHS =

GCC_C_LANGUAGE_STANDARD = gnu11

GCC_PREPROCESSOR_DEFINITIONS = $(inherited) SPTM

// -mkernel
GCC_ENABLE_KERNEL_DEVELOPMENT = YES

// -nostdinc
GCC_USE_STANDARD_INCLUDE_SEARCHING = NO

OTHER_CFLAGS = $(inherited) -ibuiltininc
